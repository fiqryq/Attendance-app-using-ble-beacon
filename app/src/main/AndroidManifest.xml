<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mango.autumnleaves">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".util.Volley.Volley"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.dosen.ProfileDosenActivity" android:theme="@style/AppTheme2">

        </activity>

        <activity android:name=".activity.mahasiswa.AboutActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.mahasiswa.AccountActivity" />
        </activity>

        <activity
            android:name=".activity.dosen.MainDosenActivity"
            android:theme="@style/InfoDosenTheme" />
        <activity android:name=".SaveUidActivity" />
        <activity android:name=".activity.mahasiswa.PresensiDetailActivity" />
        <activity android:name=".activity.mahasiswa.RegisterActivity" /> <!-- History -->
        <activity
            android:name=".activity.mahasiswa.HistoryActivity"
            android:label="History">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.mahasiswa.DashboardMahasiswaActivity" />
        </activity> <!-- Profile -->
        <activity
            android:name=".activity.mahasiswa.ProfileActivity"
            android:label="Profile"
            android:theme="@style/ProfileTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.mahasiswa.DashboardMahasiswaActivity" />
        </activity> <!-- Dashboard -->
        <activity
            android:name=".activity.mahasiswa.DashboardMahasiswaActivity"
            android:theme="@style/AppTheme2" /> <!-- Info -->
        <activity
            android:name=".activity.mahasiswa.AccountActivity"
            android:label="Informasi"
            android:theme="@style/InfoTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.mahasiswa.DashboardMahasiswaActivity" />
        </activity> <!-- Jadwal -->
        <activity
            android:name=".activity.mahasiswa.JadwalActivity"
            android:label="Jadwal"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.mahasiswa.DashboardMahasiswaActivity" />
        </activity> <!-- Login -->
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".util.ReminderBroadcast"/>
    </application>

</manifest>