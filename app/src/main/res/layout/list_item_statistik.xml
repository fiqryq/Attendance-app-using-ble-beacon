<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="3dp"
    android:orientation="vertical"
    android:elevation="3px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/content_informasi">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/statMatakuliah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matakuliah"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statDosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dosen"
                android:textSize="14sp"
                android:layout_marginBottom="3dp" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/statPertemuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pertemuan"
                        android:textSize="12sp"
                        android:layout_marginBottom="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/statPersentase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Persentase"
                        android:textSize="12sp"
                        android:layout_marginBottom="10dp" />

                </LinearLayout>

            </LinearLayout>


            <ProgressBar
                android:id="@+id/ststProgressBar"
                style="@style/ProgressBarPrimary"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:indeterminate="false"
                android:max="100"
                android:theme="@style/ProgressBarPrimary">


            </ProgressBar>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>