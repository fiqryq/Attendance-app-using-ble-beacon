<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="2"
        android:background="@drawable/form_rounded"
        android:elevation="3dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:background="@color/putih">

            <TextView
                android:id="@+id/tvHari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvMatakuliah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matakuliah"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvDosen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dosen"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvRuangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruangan"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvWaktuSelesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu_selesai"
                android:textSize="18sp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>