<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:elevation="2dp"
    android:background="@drawable/contentbox_white">

    <TextView
        android:id="@+id/tvMatakuliah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:autoSizeTextType="uniform"
        android:text="Mobile Programming"
        android:textColor="@color/hitam"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ruangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Ruangan"
        android:textColor="@color/hitam"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvHari"
        app:layout_constraintTop_toBottomOf="@+id/tvMatakuliah" />

    <TextView
        android:id="@+id/tvDosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:text="gandheva Bayu"
        android:textColor="@color/hitam"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ruangan" />

    <TextView
        android:id="@+id/tvRuangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="A6"
        android:textColor="@color/hitam"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_ruangan"
        app:layout_constraintTop_toBottomOf="@+id/tvMatakuliah" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Jam"
        android:textColor="@color/hitam"
        app:layout_constraintStart_toEndOf="@+id/tvRuangan"
        app:layout_constraintTop_toBottomOf="@+id/tvMatakuliah" />

    <TextView
        android:id="@+id/tvWaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="10:00"
        android:textColor="@color/hitam"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/tvMatakuliah" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/hitam"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/tvWaktu"
        app:layout_constraintTop_toBottomOf="@+id/tvMatakuliah" />

    <TextView
        android:id="@+id/tvWaktuSelesai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/hitam"
        android:text="11:00"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/tvMatakuliah" />

    <TextView
        android:id="@+id/tvHari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/boxtexview"
        android:paddingHorizontal="3dp"
        android:paddingVertical="2dp"
        android:text="Senin"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMatakuliah" />


</androidx.constraintlayout.widget.ConstraintLayout>
