<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/content_informasi"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMatakuliah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Matkul"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Dosen" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:layout_below="@+id/dayLabelsLinearLayout"
            android:background="@color/gray_btn_bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvHari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hari"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/boxtexview"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="3dp"
                    android:src="@drawable/ic_place_black_24dp"/>

                <TextView
                    android:id="@+id/tvRuangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:text="A7"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_timer_black_24dp"/>

                <TextView
                    android:id="@+id/waktu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:text="18:00 - 19:00 WIB"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>