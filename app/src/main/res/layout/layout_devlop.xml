<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informasi Akun"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvNamaLengkapDosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fiqry Choerudin"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nip"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvNip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6706174132"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontak"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvKontakDosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="081222790896"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvAlamatDosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pandeglang"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>

